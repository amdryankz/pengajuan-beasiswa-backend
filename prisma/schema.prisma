generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Roles {
  ADMIN
  SUPER_ADMIN
  USER
}

enum Status {
  ACTIVE
  INACTIVE
}

model User {
  id           String   @id @unique
  email        String   @unique
  password     String
  name         String
  gender       String
  phone_number String
  birthdate    String
  birthplace   String
  address      String
  status       Status?
  role         Roles
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // UserScholarships UserScholarships[]
}

model Donors {
  id        String   @id @unique
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // scholarships Scholarships[]
}

